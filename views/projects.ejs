<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Projects</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', {page: '/solutions/projects'}) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-8 mb-4">
      <h1 class="text-3xl font-bold mb-8">Projects</h1>
      <p class="mt-8">Explore all available projects below.</p>
    </div>

    <table class="table w-full">
      <thead>
        <tr>
          <th>Title</th>
          <th>Sector</th>
          <th>Summary</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% projects.forEach(project => { %>
          <tr>
            <td><%= project.title %></td>
            <td><a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-sm"><%= project.sector %></a></td>
            <td><%= project.summary_short %></td>
            <td><a href="/solutions/projects/<%= project.id %>" class="btn btn-sm">Details</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
